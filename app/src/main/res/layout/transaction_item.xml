<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/transaction_card">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/senderReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rohit Shetty -> rakesh Solanki  "
            android:textStyle="bold"
            android:textColor="@android:color/black" />




    <TextView
        android:id="@+id/amountSent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Rs: 8000.00"
        android:textColor="#FF388E3C"
        android:textStyle="bold" />
</LinearLayout>
    <TextView
        android:id="@+id/transactionID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TransactionID"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/dateItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 jul, 07:15"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Successful"
        android:gravity="right"
        android:textColor="#FF388E3C"
        />
</LinearLayout>


</LinearLayout>



